<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a1691578.netflix.home"
   >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="#0b0b0a"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageButton"
                android:layout_width="31dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/homebutton"
                android:onClick="sidebar"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_marginTop="6dp"

                android:layout_weight="3.50"
                app:srcCompat="@drawable/logo" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="67dp"
                android:layout_height="22dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/search" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="246dp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="207dp"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="0.96"
                        app:srcCompat="@drawable/firstimage"
                        android:background="#FF0B0B0A"/>

                    <TextView
                        android:id="@+id/watchnow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                     android:textAlignment="center"
                        android:text="watch now"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:background="#FF0B0B0A"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#3C3D3C"
                    android:paddingTop="14dp"
                    android:text="Popular on Netflix"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:paddingBottom="2dp"
                    android:textColor="@android:color/white"/>

                <HorizontalScrollView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:background="#3C3D3C">

                        <ImageView
                            android:layout_marginLeft="8dp"
                            android:id="@+id/imageView7"
                            android:layout_width="118dp"
                            android:layout_height="168dp"
                            app:srcCompat="@drawable/image6" />

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="118dp"
                            android:layout_marginLeft="8dp"
                            android:layout_height="168dp"

                            app:srcCompat="@drawable/image5" />

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="118dp"
                            android:layout_marginLeft="8dp"
                            android:layout_height="168dp"

                            app:srcCompat="@drawable/image3" />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="118dp"
                            android:layout_height="168dp"
                            android:layout_marginLeft="8dp"
                            app:srcCompat="@drawable/image4" />

                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:background="#3C3D3C"
                    android:paddingTop="14dp"
                    android:text="Trending Now"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:paddingBottom="2dp"
                    android:textColor="@android:color/white"/>

                <HorizontalScrollView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:background="#3C3D3C">

                        <ImageView
                            android:id="@+id/imageView81"
                            android:layout_width="118dp"
                            android:layout_height="168dp"
                            app:srcCompat="@drawable/image7"
                            android:layout_marginLeft="8dp"/>

                        <ImageView
                            android:id="@+id/imageView911"
                            android:layout_width="118dp"
                            android:layout_height="168dp"
                            android:layout_marginLeft="8dp"
                            app:srcCompat="@drawable/image9" />

                        <ImageView
                            android:id="@+id/imageView101"
                            android:layout_width="118dp"
                            android:layout_height="168dp"
                            android:layout_marginLeft="8dp"
                            app:srcCompat="@drawable/image11" />

                        <ImageView
                            android:id="@+id/imageView111"
                            android:layout_width="118dp"
                            android:layout_marginLeft="8dp"
                            android:layout_height="168dp"
                            app:srcCompat="@drawable/image8" />

                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#3C3D3C"
                    android:paddingTop="14dp"
                    android:text="New Releases"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:paddingBottom="2dp"
                    android:textColor="@android:color/white"/>

                <HorizontalScrollView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#3C3D3C"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="118dp"
                            android:layout_height="168dp"
                            android:layout_marginLeft="8dp"
                            app:srcCompat="@drawable/image1" />

                        <ImageView
                            android:id="@+id/imageView91"
                            android:layout_width="118dp"
                            android:layout_height="168dp"
                            android:layout_marginLeft="8dp"
                            app:srcCompat="@drawable/image2" />

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="118dp"
                            android:layout_height="168dp"
                            android:layout_marginLeft="8dp"
                            app:srcCompat="@drawable/image3" />

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="118dp"
                            android:layout_height="168dp"
                            android:layout_marginLeft="8dp"
                            app:srcCompat="@drawable/image11" />

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>

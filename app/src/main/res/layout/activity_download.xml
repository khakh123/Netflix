<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a1691578.netflix.home"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="#1B201A"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="65dp"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:onClick="back"
                app:srcCompat="@drawable/image30" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="50dp"
                android:paddingTop="8dp"

                android:text="My Downloads"
                android:textColor="@android:color/white"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.84"
            android:background="#181A18"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="167dp"
                android:layout_height="186dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/image31" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Movies and TV Shows that you download"
                android:textColor="@android:color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView184"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="appear here."
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="16dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="262dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"
                android:text="FIND SOMETHING TO DOWNLOAD"

                />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
